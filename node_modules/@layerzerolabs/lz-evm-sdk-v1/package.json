{
  "name": "@layerzerolabs/lz-evm-sdk-v1",
  "version": "2.3.5",
  "license": "BUSL-1.1",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json",
    "./artifacts/*": "./artifacts/*",
    "./deployments/*": "./deployments/*"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "browser": {
    "./dist/index.cjs": "./dist/index.browser.cjs",
    "./dist/index.mjs": "./dist/index.browser.mjs"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "artifacts/contracts/Relayer.sol/Relayer.json",
    "artifacts/contracts/RelayerV2.sol/RelayerV2.json",
    "artifacts/contracts/UltraLightNode.sol/UltraLightNode.json",
    "artifacts/contracts/UltraLightNodeV2.sol/UltraLightNodeV2.json",
    "artifacts/contracts/Endpoint.sol/Endpoint.json",
    "artifacts/contracts/NonceContract.sol/NonceContract.json",
    "artifacts/contracts/PriceFeed.sol/PriceFeed.json",
    "artifacts/contracts/oracle/MultiSigOracle.sol/MultiSigOracle.json",
    "artifacts/contracts/interfaces/**/*",
    "artifacts/contracts/proof/**/*",
    "artifacts/contracts/precrime/interfaces/**/*",
    "artifacts/contracts/precrime/PreCrime.sol/PreCrime.json",
    "artifacts/contracts/precrime/PreCrimeBase.sol/PreCrimeBase.json",
    "artifacts/contracts/precrime/PreCrimeView.sol/PreCrimeView.json",
    "artifacts/contracts/messagelib-e2/**/*",
    "deployments/**/*",
    "dist/**/*"
  ],
  "scripts": {
    "build": "$npm_execpath clean-prebuild && $npm_execpath populate && $npm_execpath generate-typechain-types && $npm_execpath build-ts",
    "build-ts": "$npm_execpath tsc --noEmit && $npm_execpath tsup",
    "clean": "rimraf dist src/typechain-types .turbo",
    "clean-prebuild": "rimraf -g dist src/typechain-types artifacts 'src/errors/*.json'",
    "generate-typechain-types": "$npm_execpath typechain --target ethers-v5 'artifacts/contracts/**/!(*.dbg).json' --out-dir src/typechain-types",
    "populate": "ts-node scripts/populate.ts"
  },
  "dependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.0",
    "@layerzerolabs/evm-sdks-core": "^2.3.5",
    "ethers": "^5.7.2"
  },
  "devDependencies": {
    "@layerzerolabs/evm-sdks-build": "^2.3.5",
    "@layerzerolabs/lz-evm-v1-0.7": "^2.3.5",
    "@layerzerolabs/lz-evm-v1-0.8": "^2.3.5",
    "@layerzerolabs/tsup-config-next": "^2.3.5",
    "@layerzerolabs/typescript-config-next": "^2.3.5",
    "@typechain/ethers-v5": "^10.2.1",
    "@types/node": "^20.10.5",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "tsup": "^8.0.1",
    "typechain": "^8.3.2",
    "typescript": "~5.2.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "lzVersions": {
    "default": [
      "v1"
    ]
  }
}